<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!--
		Define a bean of type ApplicationContextProvider to access Spring's
		ApplicationContext anywhere. In code: ApplicationContext appContext =
		ApplicationContextProvider.getApplicationContext();
	-->
	<bean id="_springApplicationContextProvider" class="ddth.dasp.servlet.spring.ApplicationContextProvider" />

	<bean id="IOsgiBootstrap" class="ddth.dasp.servlet.osgi.FelixOsgiBootstrap"
		init-method="init" destroy-method="destroy">
		<property name="remoteShellListenIp" value="127.0.0.1" />
		<property name="remoteShellListenPort" value="16666" />
	</bean>
</beans>
