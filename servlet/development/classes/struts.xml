<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"struts-2.1.7.dtd">
<struts>
	<!--
		<constant name="struts.enable.DynamicMethodInvocation" value="false"
		/>
	-->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="html" />

	<package name="wfp-main" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="authenticationInterceptor"
				class="ddth.wfp.servlet.struts.interceptor.AuthenticationInterceptor" />
			<interceptor-stack name="secureStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="authenticationInterceptor" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="secureStack" />
		<action name="login" class="ddth.wfp.servlet.struts.action.LoginAction">
			<result name="input">/skins/dojo/page_login.jsp</result>
			<result name="success">/skins/dojo/page_info.jsp</result>
		</action>
		<action name="home" class="ddth.wfp.servlet.struts.action.HomeAction">
			<param name="requireAuthentication">true</param>
			<result name="login" type="redirectAction">login</result>
			<result>/skins/dojo/page_home.jsp</result>
		</action>
		<action name="*" class="com.opensymphony.xwork2.ActionSupport">
			<result type="redirectAction">login</result>
		</action>
	</package>

	<package name="wfp-form" namespace="/form" extends="wfp-main">
		<result-types>
			<result-type name="json"
				class="ddth.wfp.servlet.struts.result.JsonResult" />
		</result-types>
		<action name="load" class="ddth.wfp.servlet.struts.action.form.LoadAction">
			<result type="json" />
		</action>
		<action name="populate"
			class="ddth.wfp.servlet.struts.action.form.PopulateAction">
			<result type="json" />
		</action>
		<action name="submit" class="ddth.wfp.servlet.struts.action.form.SubmitAction">
			<result type="json" />
		</action>
	</package>
</struts>
